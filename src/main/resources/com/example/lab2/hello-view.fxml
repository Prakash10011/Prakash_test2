<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="515.0" prefWidth="386.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lab2.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>



    <TextField fx:id="iid" text="id" />
   <TextField fx:id="iname"/>
   <TextField fx:id="idoctor"/>
   <TextField fx:id="iroom"/>

   <Button mnemonicParsing="false" onAction="#insertdata" text="Insert"/>
   <Button mnemonicParsing="false" onAction="#updatedata" text="Update" />
   <Button mnemonicParsing="false" onAction="#deletedata" text="Delete" />
   <Button mnemonicParsing="false" onAction="#loadData" text="Load" />
   <Button onAction="#onHelloButtonClick"  text="Fetch Data" />

    <Label fx:id="welcomeText" />
   <TableView fx:id="tableView" prefHeight="200.0" prefWidth="200.0">
     <columns>
       <TableColumn fx:id="id" prefWidth="75.0" text="id"  />
       <TableColumn fx:id="name" prefWidth="75.0" text="name" />
         <TableColumn fx:id="doctor" prefWidth="75.0" text="doctor" />
         <TableColumn fx:id="room" prefWidth="75.0" text="room" />
     </columns>
   </TableView>
</VBox>
